---
import NavItem from "../ui/header/NavItem.astro";
import LanguageDropdown from "../ui/header/LanguageDropdown.astro";
import placeholder from '../../assets/placeholder.avif?url';
import MoneroLogo from "@/../public/meta/favicon-32x32.png?url"
import { getLocale } from 'astro-i18n-aut';
import { localizeHref } from '../../i18n/utils';

const locale = getLocale(Astro.url);

const leftNav = [
  {
    label: "Get started",
    dropdown: [
      {
        label: "What is Monero?",
        desc: "Everything you need to know about Monero in a nutshell.",
        href: localizeHref(locale, "/get-started/what-is-monero"),
        image: placeholder,
      },
      {
        label: "Accept Monero",
        desc: "Learn how to accept XMR as a merchant or individual.",
        href: localizeHref(locale, "/get-started/accept-monero"),
        image: placeholder,
      },
      {
        label: "Contribute",
        desc: "Help the Monero project bring privacy to everyone.",
        href: localizeHref(locale, "/get-started/contribute"),
        image: placeholder,
      },
      {
        label: "Mining",
        desc: "Learn how to mine Monero on your computer.",
        href: localizeHref(locale, "/get-started/mining"),
        image: placeholder,
      },
      {
        label: "FAQ",
        desc: "Find answers to common questions about Monero.",
        href: localizeHref(locale, "/get-started/faq"),
        image: placeholder,
      },
    ],
  },
  { label: "Downloads", href: localizeHref(locale, "/downloads") },
  { label: "Blog", href: localizeHref(locale, "/blog") },
  {
    label: "Community",
    dropdown: [
      {
        label: "Workgroups",
        desc: "Everything you need to know about Monero in a nutshell.",
        href: localizeHref(locale, "/community/workgroups"),
        image: placeholder,
      },
      {
        label: "Sponsorships",
        desc: "Discover the ways you can help the Monero project to bring privacy to everyone.",
        href: localizeHref(locale, "/community/sponsorships"),
        image: placeholder,
      },
      {
        label: "Hangouts",
        desc: "Learn how to accept XMR as a merchant or individual with wallet software.",
        href: localizeHref(locale, "/community/hangouts"),
        image: placeholder,
      },
      {
        label: "Merchants and exchanges",
        desc: "Everything you need to know about Monero in a nutshell.",
        href: localizeHref(locale, "/community/merchants"),
        image: placeholder,
      },
    ],
  },
  {
    label: "Resources",
    dropdown: [
      {
        label: "Knowledge Base",
        desc: "Books, publications, magazines, Moneropedia.",
        href: localizeHref(locale, "/resources/knowledge-base"),
        image: placeholder,
      },
      {
        label: "Roadmap",
        desc: "Stay up to date with the latest Monero development plans and progress.",
        href: localizeHref(locale, "/resources/roadmap"),
        image: placeholder,
      },
      {
        label: "Research Lab",
        desc: "Discover the ways you can help the Monero project to bring privacy to everyone.",
        href: localizeHref(locale, "/resources/research-lab"),
        image: placeholder,
      },
      {
        label: "User Guides",
        desc: "Comprehensive guides to help you use Monero effectively and securely.",
        href: localizeHref(locale, "/resources/user-guides"),
        image: placeholder,
      },
      {
        label: "Developer Guides",
        desc: "Find answers to recurring questions and concrns about Monero.",
        href: localizeHref(locale, "/resources/developer-guides"),
        image: placeholder,
      },
      {
        label: "Monero Tools",
        desc: "A curated list of tools and software for Monero users and developers.",
        href: localizeHref(locale, "/resources/monero-tools"),
        image: placeholder,
      },
      {
        label: "Press Kit",
        desc: "Press contacts, logos, images, and other media resources.",
        href: localizeHref(locale, "/resources/press-kit"),
        image: placeholder,
      },
    ],
  },
  { label: "Crowdfunding", href: "https://ccs.getmonero.org" },
