<header class="header">
  <div class="bar">
    <a class="brand" href="/">
      <span class="mark" aria-hidden="true">M</span>
      <span class="word">MONERO</span>
    </a>

    <!-- Mobile toggle (no JS) -->
    <input
      id="nav-toggle"
      class="nav-toggle"
      type="checkbox"
      aria-label="Open menu"
    />
    <label
      for="nav-toggle"
      class="hamburger"
      aria-hidden="true"
      aria-controls="primary-nav">â˜°</label
    >

    <nav id="primary-nav" class="nav" aria-label="Primary">
      <ul class="list">
        {leftNav.map((item) => <NavItem {...item} />)}
      </ul>
    </nav>

    <!-- Click outside to close -->
    <label for="nav-toggle" class="scrim" aria-hidden="true"></label>

    <a class="lang" href="#" aria-label="Change language">
      <svg viewBox="0 0 24 24" class="globe" aria-hidden="true">
        <circle
          cx="12"
          cy="12"
          r="9"
          fill="none"
          stroke="currentColor"
          stroke-width="1.6"></circle>
        <ellipse
          cx="12"
          cy="12"
          rx="4.5"
          ry="9"
          fill="none"
          stroke="currentColor"
          stroke-width="1.6"></ellipse>
        <path
          d="M3 12h18M12 3v18"
          fill="none"
          stroke="currentColor"
          stroke-width="1.6"></path>
      </svg>
    </a>
  </div>
</header>

<style>
  /* ========== Compact tokens ========== */
  :root {
    --fg: #0b0b0f;
    --muted: #7a7a86;
    --on-dark: #cfcfd7;
    --accent: #ff6b00;
    --panel: rgba(18, 18, 24, 0.96);
  }
  @media (prefers-color-scheme: dark) {
    :root {
      --fg: #e6e6eb;
      --muted: #a9a9b4;
      --on-dark: #e2e2ea;
    }
  }

  /* ========== Header bar ========== */
  .bar {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem clamp(1rem, 4vw, 4rem);
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--on-dark);
    text-decoration: none;
    font-weight: 700;
    letter-spacing: 0.02em;
  }
  .mark {
    display: grid;
    place-items: center;
    width: 26px;
    height: 26px;
    border-radius: 50%;
    background: var(--accent);
    color: #fff;
    font-size: 14px;
    font-weight: 900;
  }

  /* ========== Desktop nav ========== */
  .nav {
    margin-left: 0.5rem;
  }
  .list {
    display: flex;
    gap: 1.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  /* ========== Utilities ========== */
  .lang {
    margin-left: auto;
    color: var(--muted);
    display: inline-flex;
    align-items: center;
    text-decoration: none;
  }
  .globe {
    width: 20px;
    height: 20px;
  }

  .nav-toggle {
    display: none;
  }
  .hamburger {
    display: none;
    margin-left: auto;
    cursor: pointer;
    font-size: 20px;
    color: var(--on-dark);
  }

  .scrim {
    display: none;
  }

  /* ========== Mobile (<=900px) ========== */
  @media (max-width: 900px) {
    .hamburger {
      display: inline-block;
    }
    .header {
      position: sticky;
      top: 0;
      z-index: 50;
      background-color: inherit;
      border-bottom: 1px solid #0b0b0f;
    }

    /* Right-side drawer */
    .nav {
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      left: auto;
      width: clamp(260px, 82vw, 420px);
      transform: translateX(100%);
      transition: transform 0.25s ease;
      background: var(--panel);
      backdrop-filter: saturate(140%) blur(10px);
      -webkit-backdrop-filter: saturate(140%) blur(10px);
      padding: 1rem 1rem 2rem;
      z-index: 1001; /* ABOVE scrim so it's clickable */
    }

    .list {
      flex-direction: column;
      align-items: stretch;
      gap: 0.25rem;
      margin-top: 2rem;
    }
    .lang {
      order: 3;
      margin-left: 0;
    }

    /* Click-outside scrim (UNDER drawer) */
    .scrim {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.45);
      display: block;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.2s ease;
      z-index: 1000;
    }

    /* Open state */
    .nav-toggle:checked ~ .nav {
      transform: translateX(0);
    }
    .nav-toggle:checked ~ .scrim {
      opacity: 1;
      pointer-events: auto;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .nav {
      transition: none;
    }
    .scrim {
      transition: none;
    }
  }
</style>
