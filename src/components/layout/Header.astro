---

<header class="header">
  <div class="bar">
    <a class="brand" href="/">
      <span class="mark" aria-hidden="true">M</span>
      <span class="word">MONERO</span>
    </a>

    <input
      id="nav-toggle"
      class="toggle"
      type="checkbox"
      aria-label="Open menu"
    />
    <label for="nav-toggle" class="hamburger" aria-hidden="true">â˜°</label>

    <nav class="nav" aria-label="Primary">
      <ul class="list">
        {leftNav.map((item) => <NavItem {...item} />)}
      </ul>
    </nav>

    <a class="lang" href="#" aria-label="Change language">
      <svg viewBox="0 0 24 24" class="globe" aria-hidden="true">
        <circle
          cx="12"
          cy="12"
          r="9"
          fill="none"
          stroke="currentColor"
          stroke-width="1.6"></circle>
        <ellipse
          cx="12"
          cy="12"
          rx="4.5"
          ry="9"
          fill="none"
          stroke="currentColor"
          stroke-width="1.6"></ellipse>
        <path
          d="M3 12h18M12 3v18"
          fill="none"
          stroke="currentColor"
          stroke-width="1.6"></path>
      </svg>
    </a>
  </div>
</header>

<style>
  .header {
    background: transparent;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
  }
  .bar {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 1em 5em;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    color: #e8e8ee;
    font-weight: 700;
    letter-spacing: 0.02em;
  }
  .mark {
    display: inline-grid;
    place-items: center;
    width: 26px;
    height: 26px;
    border-radius: 50%;
    color: #fff;
    background: var(--monero-orange);
    font-size: 14px;
    font-weight: 900;
    line-height: 1;
  }

  .nav {
    margin-left: 8px;
  }
  .list {
    display: flex;
    gap: 26px;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .lang {
    margin-left: auto;
    color: #a9a9b4;
    display: inline-flex;
    align-items: center;
  }
  .globe {
    width: 20px;
    height: 20px;
  }

  .toggle {
    display: none;
  }
  .hamburger {
    display: none;
    margin-left: auto;
    cursor: pointer;
    font-size: 20px;
    color: #cfcfd7;
  }

  @media (max-width: 900px) {
    .nav {
      order: 3;
      width: 100%;
    }
    .hamburger {
      display: inline-block;
    }
    .lang {
      order: 2;
      margin-left: 0;
    }
    .list {
      flex-direction: column;
      align-items: flex-start;
      gap: 14px;
    }
    .toggle:checked ~ .nav .list {
      display: flex;
    }
  }
</style>
