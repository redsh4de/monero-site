      },
    ],
  },
  { label: "Resources", href: "#", dropdown: [
      {
        label: "Knowledge Base",
        desc: "Books, publications, magazines, Moneropedia.",
        href: "/resources/knowledge-base",
        image: "/src/assets/placeholder.svg",
      },
      {
