---
export interface Props {
  src: string;
  size?: string;
  class?: string;
}

const { src, size = "1em", class: className = "" } = Astro.props;
// Uses monochrome mask to display icons SVGs or images, allowing color control via CSS
---

<div class={`icon ${className}`} style={`--icon-src: url(${src}); width: ${size}; height: ${size};`}></div>

<style>
  .icon {
    background-color: currentColor;
    mask: var(--icon-src) no-repeat center / contain;
    -webkit-mask: var(--icon-src) no-repeat center / contain;
  }
</style>