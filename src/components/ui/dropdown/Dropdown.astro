---
import Button from "@/components/ui/Button.astro";
import MaskIcon from "@/components/ui/MaskIcon.astro";

import dropdownCaretIcon from "@/assets/icons/mask/dropdown-caret.avif?url";

interface Props {
  label: string;
}
const { label } = Astro.props;
---

<div class="dropdown">
  <Button
    variant="primary"
    class="dropdown-trigger"
    aria-haspopup="true"
    as="span"
  >
    {label}
    <span class="caret">
      <MaskIcon src={dropdownCaretIcon} />
    </span>
  </Button>
  <div class="dropdown-content" tabindex="-1">
    <slot />
  </div>
</div>

<style>
  .dropdown {
    position: relative;
    display: inline-flex;
    flex-direction: column;
  }

  .dropdown-trigger {
    font: inherit;
    width: 100%;
  }

  .caret {
    display: flex;
    align-items: center;
    margin-inline-start: 0.5rem;
    transition: transform 0.2s ease;
  }
  .dropdown:focus-within .caret {
    transform: rotate(180deg);
  }

  /* Panel */
  .dropdown-content {
    position: absolute;
    inset-block-start: 100%;
    inset-inline-start: 0;
    background: var(--card-color);
    border-radius: 0.75rem;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
    z-index: 10;
    display: flex;
    flex-direction: column;
    margin-block-start: 0.25rem;
    min-width: 18rem;
    max-height: 25rem;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 0.5rem;
    user-select: none;

    visibility: hidden;
    pointer-events: none;
    transform: translateY(-10px);
    transition: transform 0.2s ease;
  }

  .dropdown:focus-within .dropdown-content {
    visibility: visible;
    pointer-events: auto;
    transform: translateY(0);
  }
</style>
