---
export interface Props {
  icon?: any; // inline SVG
  title: string;
  description?: string;
  ctaLabel?: string;
  ctaHref?: string;
}

const {
  icon = null,
  title,
  description = "",
  ctaLabel = "Learn more",
  ctaHref = "#",
} = Astro.props;
---

<article class="resource-card">
  {icon && <div class="icon">
    <img src={icon} />
  </div>}

  <h3 class="title">{title}</h3>

  {description && <p class="desc">{description}</p>}

  <a class="cta" href={ctaHref}>
    {ctaLabel}
    <svg class="arrow" viewBox="0 0 24 24" aria-hidden="true">
      <path
        d="M5 12h14M13 6l6 6-6 6"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
  </a>
</article>

<style>
  .resource-card {
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .resource-card:hover {
    border-color: rgba(255, 255, 255, 0.18);
  }

  .icon {
    width: 4rem;
    height: 4rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    display: gris;
    place-items: center;
    margin: 1rem 0 1.6rem 0;
    padding: 1rem;
    color: var(--monero-orange);
  }

  .icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .title {
    margin: 0 0 0.8rem;
    font-size: 1.4rem;
    font-weight: 700;
  }

  .desc {
    margin: 0 0 1.5rem;
    font-size: 1rem;
    line-height: 1.6;
    max-width: 45ch;
  }

  .cta {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-weight: 700;
    color: var(--monero-orange);
    text-decoration: none;
    margin-top: auto;
  }

  .cta:hover {
    text-decoration: underline;
  }

  .arrow {
    width: 16px;
    height: 16px;
  }
</style>
