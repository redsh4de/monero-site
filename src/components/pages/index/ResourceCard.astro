---
import arrowLeft from "../../../assets/icons/arrow-left.avif?url";
import Icon from "../../ui/Icon.astro";
export interface Props {
  icon?: any;
  title: string;
  description?: string;
  ctaLabel?: string;
  ctaHref?: string;
}

const {
  icon = null,
  title,
  description = "",
  ctaLabel = "Learn more",
  ctaHref = "#",
} = Astro.props;
---

<article class="resource-card">
  {icon && <div class="icon">
    <img src={icon} alt="Icon"/>
  </div>}

  <h2 class="title">{title}</h2>

  {description && <p class="desc">{description}</p>}

  <a class="cta" href={ctaHref}>
    {ctaLabel}
    <Icon src={arrowLeft} />
  </a>
</article>

<style>
  @media (prefers-color-scheme: light) {
    .icon {
      background-color: var(--card-color);
    }
  }

  .resource-card {
    border: 1px solid var(--border-color);
    border-radius: 1rem;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .icon {
    width: 4rem;
    height: 4rem;
    border: 1px solid var(--border-color);
    border-radius: 50%;
    display: gris;
    place-items: center;
    margin: 1rem 0 1.6rem 0;
    padding: 1rem;
    color: var(--monero-orange);
  }

  .icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .title {
    margin: 0 0 0.8rem;
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--heading-color);
  }

  .desc {
    margin: 0 0 1.5rem;
    line-height: var(--line-height-body);
    max-width: 45ch;
    color: var(--paragraph-subtitle);
  }

  .cta {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-weight: 700;
    color: var(--monero-orange);
    text-decoration: none;
    margin-top: auto;
  }

  .cta:hover {
    text-decoration: underline;
  }

  .arrow {
    width: 1rem;
    height: 1rem;
  }
</style>
