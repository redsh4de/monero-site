---
import { getLocale, localizeHref } from "@/i18n/utils";
const { t } = Astro.props;
const locale = getLocale(Astro.url);
import moneroOutline from "@/assets/icons/mask/monerooutline.avif?url";
import MaskIcon from "@/components/ui/MaskIcon.astro";
---

<div class="hero" aria-labelledby="hero-title">
  <div class="background-logo" aria-hidden="true">
    <div class="logo-box">
      <MaskIcon class="mask-icon" src={moneroOutline} size="100%" />
      <div class="inner-circle"></div>
    </div>
  </div>

  <div class="wrap">
    <h1 id="hero-title" class="title">
      <span class="accent">{t("index.hero.titleMonero")}</span><br />
      <span class="plain">{t("index.hero.titleMeans")}</span>
      <span class="accent">{t("index.hero.titleMoney")}</span>
    </h1>

    <p class="lead">
      {t("index.hero.lead")}
    </p>

    <div class="actions">
      <a
        class="btn primary"
        href={localizeHref(locale, "/get-started/what-is-monero")}
        >{t("index.hero.getStarted")}</a
      >
      <a
        class="btn ghost"
        href={localizeHref(locale, "/resources/knowledge-base")}
        >{t("index.hero.learnMore")}</a
      >
    </div>
  </div>
</div>

<style>
  /* ===== Hero ===== */
  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    container-type: size;
  }

  .wrap {
    text-align: center;
    margin-inline: auto;
    position: relative;
    z-index: 1;
  }

  /* Title scales smoothly from phones to desktop */
  .title {
    margin: 0 0 0.75rem 0;
    font-weight: var(--font-weight-extra-bold);
    letter-spacing: -0.015em;
    line-height: var(--line-height-title);
    font-size: clamp(2.5rem, 7vw, 4rem);
  }
  .accent {
    color: var(--monero-orange);
  }

  .lead {
    margin: 0 auto 1.5rem;
    max-width: 60ch;
    line-height: var(--line-height-body);
    font-size: var(--font-size-lg);
    opacity: 0.9;
  }

  .actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    justify-content: center;
    align-items: center;
    margin-top: 0.5rem;
    max-width: 100%;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.25rem;
    border-radius: 999px;
    font-weight: 700;
    text-decoration: none;
    font-size: 0.95rem;
    transition:
      transform 0.08s ease,
      opacity 0.12s ease;
    width: 100%;
    max-width: 20rem;
    box-sizing: border-box;
  }
  .btn:hover,
  .btn:focus {
    opacity: 0.9;
    outline: none;
  }
  .btn:active {
    transform: translateY(1px);
  }
  .primary {
    background: var(--monero-orange);
    color: white;
  }
  .ghost {
    background: var(--text-color);
    color: var(--bg-color);
  }

  @media (min-width: 640px) {
    .actions {
      flex-direction: row;
    }
    .btn {
      width: auto;
    }
  }
  @media (prefers-reduced-motion: reduce) {
    .btn {
      transition: none;
    }
  }

  .background-logo {
    position: absolute;
    inset: 0;
    opacity: 0.3;
    display: grid;
    place-items: center;
    pointer-events: none;
  }

  .logo-box {
    inline-size: min(100cqw, 100cqh);
    aspect-ratio: 1 / 1;
    position: relative;
  }
  @supports not (width: 100cqw) {
    .logo-box {
      inline-size: min(90vmin, 100%);
      aspect-ratio: 1 / 1;
    }
  }

  .mask-icon {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .inner-circle {
    position: absolute;
    inset: 10%;
    border-radius: 50%;
    box-shadow: inset 0 0 30px rgba(255, 102, 0, 0.5);
  }
</style>
