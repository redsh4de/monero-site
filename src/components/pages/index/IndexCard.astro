---
export interface Props {
    title: string;
    description?: string;
    id?: string;
    as?: keyof HTMLElementTagNameMap;
}

const {
    title,
    description = "",
    id = "card-" + Math.random().toString(36).slice(2),
    as = "section",
} = Astro.props;

const Tag = as as any;
---

<Tag class="card" aria-labelledby={id}>
    <header class="head">
        <h1 id={id} class="title">{title}</h1>
        {description && <p class="desc">{description}</p>}
    </header>

    <div class="body">
        <slot />
    </div>
</Tag>

<style>
    .card {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        padding-block: 3rem;
    }
    .head {
        display: grid;
        grid-template-columns: minmax(0, 1fr) minmax(0, 1.5fr);
        gap: 5rem;
        align-items: start;
    }
    .title {
        margin: 0;
        font-weight: 700;
        line-height: 1.2;
        font-size: clamp(1.75rem, 2.4vw, 3rem);
        color: var(--heading-color);
    }
    .desc {
        margin: 0;
        line-height: 1.6;
        color: var(--paragraph-main);
        font-size: clamp(1rem, 1.2vw, 1.125rem);
    }
    .body {
        display: grid;
        grid-template-columns: minmax(0, 1fr) minmax(0, 1.5fr);
        gap: 5rem;
        align-items: center;
    }

    /* stack on small screens */
    @media (max-width: 900px) {
        .card {
            gap: 1.25rem;
            padding-block: 2rem;
        }
        .head,
        .body {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        .body {
            display: flex;
            flex-direction: column-reverse;
        }
    }
</style>
