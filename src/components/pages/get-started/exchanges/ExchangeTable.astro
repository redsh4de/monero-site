---
export interface Props {
  title: string;
  description: string;
  exchanges: Array<{
    type: string;
    name: string;
    img: string;
    alt: string;
    description: string;
    fiat: boolean;
    crypto: boolean;
    url: string;
    kycClass?: string;
    kycLabel?: string;
  }>;
  hasKyc: boolean;
  disclaimerText?: string;
}

const { title, description, exchanges, hasKyc, disclaimerText } = Astro.props;

import shieldIcon from "@/assets/icons/mask/shieldAlert.avif";
import MaskIcon from "@/components/ui/MaskIcon.astro";
---

<section class="table-section">
  <h2>{title}</h2>
  <p class="paragraph-secondary">{description}</p>
  {disclaimerText && (
    <div class="disclaimer-note">
      <MaskIcon src={shieldIcon} size="1em" />
      <span>{disclaimerText}</span>
    </div>
  )}
  <table class="exchange-table">
    <thead>
      <tr>
        <th>Name</th>
        {hasKyc && <th>KYC</th>}
        <th>Fiat</th>
        <th>Crypto</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {exchanges.map((ex) => {
        const highlightClass =
          ex.type === "decentralized"
            ? "privacy-highlight"
            : ex.type === "aggregator"
            ? "aggregator-highlight"
            : "";
        return (
          <tr
            class={`exchange-row ${ex.type} ${ex.fiat ? "fiat-highlight" : ""} ${
              ex.crypto ? "crypto-highlight" : ""
            } ${highlightClass}`}
          >
            <td class="with-icon">
              <img src={ex.img} alt={ex.alt} class="exchange-icon" />
              <span>
                <strong>{ex.name}</strong>
                <small>{ex.description}</small>
              </span>
            </td>
            {hasKyc && (
              <td class={ex.kycClass} data-label="KYC">
                {ex.kycLabel}
              </td>
            )}
            <td class={ex.fiat ? "checkmark" : "cross"} data-label="Fiat">
              {ex.fiat ? "✓" : "✗"}
            </td>
            <td class={ex.crypto ? "checkmark" : "cross"} data-label="Crypto">
              {ex.crypto ? "✓" : "✗"}
            </td>
            <td class="visit-cell">
              <a href={ex.url} target="_blank" rel="noopener noreferrer external">
                Visit
              </a>
            </td>
          </tr>
        );
      })}
    </tbody>
  </table>
  <slot />
</section>

<style>
  .table-section {
    margin-bottom: 2rem;
  }

  .table-section h2 {
    color: var(--heading-color);
    font-size: var(--font-size-2xl);
    margin-bottom: 0.5rem;
  }

  .paragraph-secondary {
    color: var(--paragraph-subtitle);
    font-size: var(--font-size-base);
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .disclaimer-note {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
    margin-bottom: 1rem;
    padding: 0.5rem;
    background: rgba(255, 152, 0, 0.05);
    border: 1px solid rgba(255, 152, 0, 0.2);
    border-radius: 0.25rem;
    font-size: var(--font-size-sm);
    color: var(--text-primary);
  }

  .disclaimer-note span {
    flex: 1;
  }

  .exchange-row {
    transition: background 0.15s ease;
  }

  .exchange-icon {
    width: 3em;
    vertical-align: middle;
    border-radius: 0.5rem;
  }

  .with-icon {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .exchange-table {
    width: 100%;
    border-collapse: collapse;
    background: var(--card-color);
    border-radius: 8px;
    overflow: hidden;
  }

  th,
  td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }

  th {
    background: var(--card-hover-color);
    font-weight: var(--font-weight-semibold);
    color: var(--heading-color);
  }

  td {
    color: var(--text-primary);
  }

  .kyc-required {
    color: #f44336;
  }

  .kyc-optional {
    color: #ff9800;
  }

  .kyc-none {
    color: #4caf50;
  }

  .checkmark {
    color: #4caf50;
  }

  .cross {
    color: var(--text-secondary);
  }

  td small {
    color: var(--paragraph-subtitle);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-caption);
    margin-top: 0.25rem;
    display: block;
  }

  .visit-cell a {
    font-weight: var(--font-weight-medium);
    text-decoration: none;
  }

  @media (max-width: 640px) {
    .exchange-table {
      border-radius: 0;
      background: transparent;
      border-collapse: separate;
      border-spacing: 0;
    }

    .exchange-table thead {
      display: none;
    }

    .exchange-table tbody {
      display: block;
    }

    .exchange-row {
      display: flex;
      flex-wrap: wrap;
      padding: 0.75rem 0.9rem;
      margin-bottom: 0.75rem;
      border-radius: 0.75rem;
      border: none;
      background: var(--card-color);
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .exchange-row:last-child {
      margin-bottom: 0;
    }

    .exchange-row td {
      border-bottom: none;
      padding: 0;
    }

    /* Top: icon + title + description */
    .exchange-row .with-icon {
      order: 0;
      flex: 1 1 100%;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 0.5rem;
    }

    .exchange-row .with-icon .exchange-icon {
      width: 2.5rem;
      flex-shrink: 0;
    }

    .exchange-row .with-icon span {
      display: block;
    }

    .exchange-row .with-icon strong {
      display: block;
      margin-bottom: 0.15rem;
    }

    .exchange-row .kyc-required,
    .exchange-row .kyc-optional,
    .exchange-row .kyc-none,
    .exchange-row .checkmark,
    .exchange-row .cross {
      order: 1;
      flex: 0 0 auto;
      display: inline-flex;
      align-items: center;
      padding: 0.2rem 0.7rem;
      margin: 0 0.45rem 0.4rem 0;
      border-radius: 999px;
      font-size: var(--font-size-xs);
      line-height: 1.2;
      background: color-mix(in srgb, var(--card-hover-color), white 6%);
      white-space: nowrap;
    }

    /* KYC chip label */
    .exchange-row .kyc-required::before,
    .exchange-row .kyc-optional::before,
    .exchange-row .kyc-none::before {
      content: attr(data-label);
      text-transform: uppercase;
      letter-spacing: 0.06em;
      font-weight: var(--font-weight-medium);
      font-size: 0.8em;
      margin-right: 0.35rem;
      color: var(--paragraph-subtitle);
    }

    /* Fiat / Crypto pill labels */
    .exchange-row .checkmark::before,
    .exchange-row .cross::before {
      content: attr(data-label);
      text-transform: uppercase;
      letter-spacing: 0.06em;
      font-weight: var(--font-weight-medium);
      font-size: 0.8em;
      margin-right: 0.35rem;
      color: var(--paragraph-subtitle);
    }

    /* Maintain semantic colors for the icon/text inside pill */
    .exchange-row .checkmark {
      color: #4caf50;
    }

    .exchange-row .cross {
      color: var(--text-secondary);
    }

    .exchange-row .visit-cell {
      order: 2;
      flex: 1 1 100%;
      margin-top: 0.25rem;
    }

    .exchange-row .visit-cell a {
      display: inline-flex;
      align-items: center;
      font-size: var(--font-size-sm);
    }
  }
</style>
