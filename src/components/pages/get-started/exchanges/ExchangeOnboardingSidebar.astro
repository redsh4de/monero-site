---
// src/components/exchanges/ExchangeOnboardingSidebar.astro
import MaskIcon from "@/components/ui/MaskIcon.astro";
import hashtagIcon from "@/assets/icons/mask/hashtag.avif";
import type { ImageMetadata } from "astro";

interface HighlightOption {
  id: string;
  linkClass: string;
  icon: ImageMetadata;
  title: string;
}

interface Props {
  title: string;
  subtitle: string;
  options: HighlightOption[];
  clearHref?: string;
}

const { title, subtitle, options, clearHref = "#clear" } = Astro.props;
---

<aside class="sidebar">
  <div class="intro-section card">
    <h2 class="intro-title">{title}</h2>
    <p class="intro-description">{subtitle}</p>
    <div class="options">
      {options.map((opt) => (
        <a href={`#${opt.id}`} class={`option ${opt.linkClass}`}>
          <span class="option-icon">
            <MaskIcon src={opt.icon} size="1.5em" aria-hidden="true" />
          </span>
          <div class="content">
            <span class="option-title">{opt.title}</span>
          </div>
          <div class="arrow">
            <MaskIcon src={hashtagIcon} size="0.75em" aria-hidden="true" />
          </div>
        </a>
      ))}
      <div class="clear-selection">
        <a href={clearHref} class="clear-link">Clear selection</a>
      </div>
    </div>
  </div>
</aside>